@page
@model WEBFurniTOOLS.Pages.AdministratorRP.IzmeniKorisnikeModel
@section ImeAdmina{
    @Model.getUserString("emailAdmina")
}
@{
    Layout="_LayoutTest";
}
<style>
.divce
{
    padding-bottom: 26px;
    padding-right: 10px;
}
.divce2{
        padding-bottom: 20px;
}
</style>
<form  method="POST">
    
   <div class="container">
            <h1>Profil kupca za izmenu</h1>
     
     <div></div> 
     <input type="hidden" asp-for="noviKupac.ID">
    <div  id="sakriven" asp-validation-summary="All"></div>
    <div >@Model.ErrorMessage</div>

        <input type="hidden" class="form-control" asp-for="noviKupac.ID"  aria-describedby="basic1">
    <div style="margin-top: 10px" class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic1">Ime : </span>
        </div>
        <input type="text" class="form-control" asp-for="noviKupac.Ime"  aria-describedby="basic1">
    </div>
    
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic2">Prezime : </span>
        </div>
        <input type="text" class="form-control" asp-for="noviKupac.Prezime"  aria-describedby="basic2">
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic3">Email : </span>
        </div>
        <input type="email" class="form-control" asp-for="noviKupac.Email"  aria-describedby="basic3">
    </div>

    

    <input style="float: right;"  type="hidden" asp-for="noviKupac.Sifra">

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic4">Broj telefona :</span>
        </div>
        <input type="text" class="form-control" asp-for="noviKupac.BrojTelefona"  aria-describedby="basic4" >
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic5">Adresa : </span>
        </div>
        <input type="text" class="form-control" asp-for="noviKupac.Adresa"  aria-describedby="basic5" >
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic6">Grad : </span>
        </div>
        <input type="text" class="form-control" asp-for="noviKupac.Grad" aria-describedby="basic6">
    </div>

  <input style="float: right; margin-top: 10px;" type="submit" class="btn btn-warning" value="Izmeni kupca" asp-page-handler="Izmeni">

    </div>


</form>
    @if(@Model.Ucitano==false)
    {
    <script>
        var nesto = document.getElementById("sakriven");
        nesto.innerText="";
    </script>
    Model.Ucitano=true;
    }