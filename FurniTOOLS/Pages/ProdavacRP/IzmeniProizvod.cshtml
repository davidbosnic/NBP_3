@page
@model WEBFurniTOOLS.Pages.ProdavacRP.IzmeniProizvodModel
@{
    Layout="_LayoutProdavac";
}
@section ImeProdavca{
  @Model.getUserString("imeProdavca") @Model.getUserString("prezimeProdavca") 
}
@section MailProdavca{

  @Model.getUserString("emailProdavca") 
}
<style>
        h1{
        margin-top: 5%;
    }
</style>
<div class="container">
<form method="POST" enctype = "multipart/form-data">
    <input type="hidden" asp-for="proizvodZaIzmenu.URLSlike">
    <input type="hidden" asp-for="idProizvod">
    <input type="hidden" asp-for="proizvodZaIzmenu.ID">
    <h1>Izmeni proizvod</h1>
    <img src="@Model.proizvodZaIzmenu.URLSlike" class="img-fluid" alt="Responsive image">
    <div id='sakriven' asp-validation-summary="All"></div>
    <div>@Model.ErrorMessage1</div>
    <div>@Model.ErrorMessage2</div>
      
    @* <label style="float: right;" >Naziv: </label>
    <input style="float: right;"  type="text" asp-for="proizvodZaIzmenu.Naziv">
    <label style="float: right;" >Šifra proizvoda: </label>
    <input style="float: right;"  type="text" asp-for="proizvodZaIzmenu.Sifra">
    <label style="float: right;" >Povrsina pod štofom: </label>
    <input style="float: right;" step="any"  type="number" asp-for="proizvodZaIzmenu.PovrsinaMaterijala">
    <label style="float: right;">Visina baze: </label>
    <input style="float: right;"  type="number" asp-for="proizvodZaIzmenu.VisinaBaze">
    <label style="float: right;" >Visina naslona: </label>
    <input style="float: right;"  type="number" asp-for="proizvodZaIzmenu.VisinaNaslona">
    <label style="float: right;" >Cena po komadu: </label>
    <input style="float: right;"  type="number" asp-for="proizvodZaIzmenu.CenaPoKomadu">

    <label style="float: right;" >Promeni sliku ?</label>
    <input style="float: right;"  type="checkbox" asp-for="PromeniSliku"> *@

    @* <label  style="float: right;" >Slika proizvoda: </label>
    <input class="btn btn-warning" style="float: right;"  type="file" asp-for="Slika"> *@

    <input style="float: right;" type="hidden" asp-for="Ja.ID">
    <input style="float: right;" type="hidden" asp-for="Ja.Ime">
    <input style="float: right;" type="hidden" asp-for="Ja.Prezime">
    <input style="float: right;" type="hidden" asp-for="Ja.Email" >
    <input style="float: right;" type="hidden" asp-for="Ja.Sifra">
    <input style="float: right;" type="hidden" asp-for="Ja.BrojTelefona">
    <input style="float: right;" type="hidden" asp-for="Ja.Adresa">
    <input style="float: right;" type="hidden" asp-for="Ja.Grad">
    <input style="float: right;" type="hidden" asp-for="Ja.Firma">
    <input style="float: right;" type="hidden" asp-for="Ja.Verifikovan">
    <div style="margin-top: 10px" class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic1">Naziv : </span>
        </div>
        <input type="text" class="form-control" asp-for="proizvodZaIzmenu.Naziv"  aria-describedby="basic1">
    </div>
    
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic2">Šifra proizvoda : </span>
        </div>
        <input type="text" class="form-control" asp-for="proizvodZaIzmenu.Sifra"  aria-describedby="basic2">
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic3">Povrsina pod štofom : </span>
        </div>
        <input class="form-control"  step="any"  type="number" asp-for="proizvodZaIzmenu.PovrsinaMaterijala"  aria-describedby="basic3" >
    </div>


    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic4">Visina baze : </span>
        </div>
        <input  class="form-control" type="number" asp-for="proizvodZaIzmenu.VisinaBaze"  aria-describedby="basic4" >
    </div>

  

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic5">Visina naslona : </span>
        </div>
        <input  class="form-control" type="number" asp-for="proizvodZaIzmenu.VisinaNaslona"  aria-describedby="basic5" >
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic6">Cena po komadu : </span>
        </div>
        <input  class="form-control" type="number" asp-for="proizvodZaIzmenu.CenaPoKomadu" aria-describedby="basic6">
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic7">Promeni sliku ? </span>
        </div>
        <input id="cena"type="checkbox" data-toggle="toggle" data-onstyle="warning" data-style="slow" data-offstyle="danger" asp-for="PromeniSliku" aria-describedby="basic7">
    </div>

    <div class="input-group mb-3">
        <div style="height: 38px;" class="input-group-prepend">
            <span class="input-group-text" id="inputGroupFileAddon01">Slika proizvoda : </span>
        </div>
        <div class="custom-file">
            <input type="file" asp-for="Slika" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
            <label class="custom-file-label" for="inputGroupFile01">Odaberite fajl</label>
        </div>
    </div>
    <script>
            $('#inputGroupFile01').on('change',function(){
                //get the file name
                var fileName = $(this).val().replace('C:\\fakepath\\', " ");
                //replace the "Choose a file" label
                $(this).next('.custom-file-label').html(fileName);
            })
        </script>

        <input style="margin-top: 20px;float: right;" class="btn btn-warning" type="submit" asp-page-handler="Izmeni" value="Izmeni proizvod">
    

</form>
</div>
    @if(@Model.Ucitano==false)
    {
    <script>
        var nesto = document.getElementById("sakriven");
        nesto.innerText="";
    </script>
    Model.Ucitano=true;
    }